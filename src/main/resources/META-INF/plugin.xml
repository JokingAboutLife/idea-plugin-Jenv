<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.example</id>
    <name>Jenv</name>
    <vendor>JokingAboutLife</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.JenvBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.example.jenv.service.JenvService"/>
        <applicationService serviceImplementation="com.example.jenv.service.JenvJdkTableService"/>
        <projectService serviceImplementation="com.example.jenv.service.JenvStateService"/>
        <postStartupActivity implementation="com.example.jenv.activity.JenvProjectStartupActivity"/>
        <statusBarWidgetFactory id="Jenv.Widget" order="first"
                                implementation="com.example.jenv.widget.JenvBarWidgetFactory"/>
        <notificationGroup id="Jenv" displayType="BALLOON" isLogByDefault="true"/>
    </extensions>

    <applicationListeners>
        <listener class="com.example.jenv.listener.VersionFileChangeListener"
                  topic="com.intellij.openapi.vfs.newvfs.BulkFileListener"/>
    </applicationListeners>

    <projectListeners>
        <listener class="com.example.jenv.listener.JdkChangeListener"
                  topic="com.intellij.openapi.projectRoots.ProjectJdkTable$Listener"/>
    </projectListeners>

    <actions>
        <!--        <action id="com.example.jenv.action.JenvAction" class="com.example.jenv.action.JenvAction" text="Jenv"-->
        <!--                description="Jenv action">-->
        <!--            <add-to-group group-id="ToolsMenu" anchor="last"/>-->
        <!--        </action>-->
    </actions>
</idea-plugin>
